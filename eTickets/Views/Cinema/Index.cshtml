@model IEnumerable<Cinemas>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-10 offset-md-1">

            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr class="text-center">
                        <th>Logo</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cinema in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="img-thumbnail" src="@cinema.Logo" alt="@cinema.Name" style="max-width:150px" />
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => cinema.Name)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => cinema.Description)
                            </td>
                            <td class="align-middle text-center">
                                <a class="btn btn-outline-primary" asp-controller="Cinema" asp-action="Edit" asp-route-id="@cinema.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-outline-info" asp-controller="Cinema" asp-action="Details" asp-route-id="@cinema.Id">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a class="btn btn-outline-danger" asp-controller="Cinema" asp-action="Delete" asp-route-id="@cinema.Id">
                                    <i class="bi bi-trash text-danger"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this cinema?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>

<div style="position:fixed;right:25px;bottom:25px;" class="text-white">
    <a asp-controller="Cinema" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>