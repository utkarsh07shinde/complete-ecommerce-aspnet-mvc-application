@model Cinemas

@{
    ViewData["Title"] = "Add new Cinemas";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Add a New Cinemas</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" style="max-height:10%;max-width:20%" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index"> Show All </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            // Use the correct selector to target the image element
            var output = $("#ProfilePicturePreview");
            output.attr("src", $("#Logo").val());
        });

        // Use the correct event binding for the "input" event
        $("#Logo").on("input", function () {
            var output = $("#ProfilePicturePreview");
            output.attr("src", $(this).val());
        });
    </script>
}
